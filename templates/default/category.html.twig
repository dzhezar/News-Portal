{%  extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row" style="padding-left: 45%">
            <h1>{{ title.name }}</h1>
        </div>
    <div class="container">
        <div class="row" style="padding-left: 10%">
            <p>{{ title.description }}</p>
        </div>
    <main class="index" role="main">
        <div class="py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% for post in posts %}
                            <div class="col-md-4">
                                <div class="card mb-4 shadow-sm">
                                    <img class="card-img-top" src="{{ post.image }}" >
                                    <div class="card-body">
                                        <p class="card-text">
                                           {{ post.description }}
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-outline-secondary">Read</button>
                                            </div>
                                            <small class="text-muted">{{ post.publicationDate | ago}} </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
    </div>

{% endblock %}
